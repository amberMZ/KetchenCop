<div class="container">
  
    <%= render 'header' %>
    
    <p id="notice"><%= notice %></p>
    
    <div>
      <h1>Listing Images</h1>
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>Filename</th>
            <th>Description</th>
            <th>Category</th>
            <th colspan="4"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td><%= image.id %></td>
              <td><%= image.filename %></td>
              <td><%= image.description %></td>
              <td><%= image.category %></td>
              <td><%= link_to 'Show', image %></td>
              <td><%= link_to 'Edit', edit_image_path(image) %></td>
              <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <a href="/images/new" class="btn btn-default" role="button">New Image</a></a>

    <div>
        <h1>Batch Upload</h1>
        <%= form_tag("/images/upload", method: "post", class: "form-horizontal") do %>
            <div class="form-group">
                <div class="col-sm-10">
                  <%= text_area_tag :json_data, nil, :required => true, :rows => 10, :class => "form-control",
                  :placeholder => "[\n\t{\n\t\t\"id\": 1,\n\t\t \"description\": \"Baltimore in 1960s\",\n\t\t \"filename\": \"0001.jpg\",\n\t\t \"category\": 1
\t}\n]"%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <%= submit_tag("Upload", :class => "btn btn-default" ) %>
                </div>
            </div>
        <% end %>
    </div>
</div>



