<div class="container">

  <%= render 'header' %>
  <p id="notice"><%= notice %></p>
  
  <div class="panel panel-default">
    <div class="panel-body">
       <img style="max-width:256px;max-height:256px;", src=<%= asset_path(@image.filename) %>>
    </div>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Cateogry</h3>
    </div>
    <div class="panel-body">
       <%= @image.category %>
    </div>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Filename</h3>
    </div>
    <div class="panel-body">
       <%= @image.filename %>
    </div>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Description</h3>
    </div>
    <div class="panel-body">
       <%= @image.description %>
    </div>
  </div>
  
  <%= link_to 'Edit', edit_image_path(@image), :class => 'btn btn-primary spacer' %>
  <%= link_to 'Back', images_path, :class => 'btn btn-primary spacer' %>

</div>



