<div class="container">
  <%= render 'header' %>
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Recall Levels</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Display Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @levels.each do |level| %>
        <tr>
          <td><%= level.id %></td>
          <td><%= level.display_name %></td>
          <td><%= level.description %></td>
          <td><%= link_to 'Show', level %></td>
          <td><%= link_to 'Edit', edit_level_path(level) %></td>
          <td><%= link_to 'Destroy', level, method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <a href="/levels/new" class="btn btn-default" role="button">New Recall Level</a></a>
  <br>
  <div>
      <h1>Batch Upload</h1>
      <%= form_tag("/levels/upload", method: "post", class: "form-horizontal") do %>
          <div class="form-group">
              <div class="col-sm-10">
                <%= text_area_tag :json_data, nil, :required => true, 
                :rows => 10, :class => "form-control",
                :placeholder => "[\n\t{\n\t\t\"id\": 1,\n\t\t 
                \"display_name\": \"Class I recall \",\n\t\t
                \"description\": \" a situation in which there is a reasonable probability that the use of or exposure to a violative product will cause serious adverse health consequences or death\"\n\t}\n]"%>
              </div>
          </div>
          <div class="form-group">
              <div class="col-sm-10">
                  <%= submit_tag("Upload", :class => "btn btn-default" ) %>
              </div>
          </div>
      <% end %>
  </div>
</div>
