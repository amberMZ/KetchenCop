<div class="container">
  <%= render 'header' %>
  <p id="notice"><%= notice %></p>
  
  <h1>Listing Contacts</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.id %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <a href="/contacts/new" class="btn btn-default" role="button">New Contact</a></a>
  <br>
  <div>
      <h1>Batch Upload</h1>
      <%= form_tag("/contacts/upload", method: "post", class: "form-horizontal") do %>
          <div class="form-group">
              <div class="col-sm-10">
                <%= text_area_tag :json_data, nil, :required => true, 
                :rows => 10, :class => "form-control",
                :placeholder => "[\n\t{\n\t\t\"id\": 1,\n\t\t 
                \"email\": \"example@example.com \",\n\t\t
                \"phone\": \"+1 (206) 123-5678\"\n\t}\n]"%>
              </div>
          </div>
          <div class="form-group">
              <div class="col-sm-10">
                  <%= submit_tag("Upload", :class => "btn btn-default" ) %>
              </div>
          </div>
      <% end %>
  </div>
</div>
